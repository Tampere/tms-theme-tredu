<div {?anchor}id="{anchor|attr}"{/anchor} class="section social-media">
    <div class="container">
        <div class="columns">
            <div class="column is-8 is-offset-2 has-text-centered has-text-black">
                {?title}
                    <h2 class="mt-0 mb-6">
                        {title|html}
                    </h2>
                {/title}

                {?description}
                    <div class="social-media__description mb-4 is-family-secondary has-text-weight-semibold has-text-large">
                        {description|html}
                    </div>
                {/description}
            </div>

        </div>

        <div class="columns">
            <div class="column">
                {?flocker_embed}
                     {! Skip embed !}
                    <a href="#{id|attr}" class="skip-to-content">
                        {skip_text|html}
                    </a>
                    <div class="social-media__flocker-embed">
                        {flocker_embed|html}
                    </div>
                    {! Skip embed target !}
                    <div id="{id|attr}"></div>
                {/flocker_embed}
            </div>
        </div>
    </div>
</div>
