<div class="contacts__item column {column_class|attr} has-text-small keep-vertical-spacing">
    <div class="columns contacts__inner-columns">
        <div class="contacts__item-inner column is-10-tablet is-12-desktop p-6-desktop">
            <div class="columns is-multiline is-mobile is-4">
                {?image}
                    <div class="column is-12-mobile is-12-tablet is-4-desktop">
                        <div class="image is-3by4">
                            {@image id=image size="medium" class="objectfit-image" /}
                        </div>
                    </div>
                {/image}

                <div class="column">
                    {?additional_info_top}
                        <div class="contacts__additional-info-top mb-3 keep-vertical-spacing">
                            {additional_info_top|kses}
                        </div>
                    {/additional_info_top}

                    {?title}
                        <div class="mb-2">
                            {title|html}
                        </div>
                    {/title}

                    {@isset key1=first_name key2=last_name method="OR" }
                        <div class="contacts__name has-text-weight-bold mb-3">
                            {first_name|html} {last_name|html}
                        </div>
                    {/isset}

                    {?phone_repeater}
                        <div class="mb-3">
                            {#phone_repeater}
                                <div class="is-flex is-align-items-center">
                                    <div class="contacts__icon-container">
                                        {>"ui/icon" icon="phone" class="icon--large is-primary" /}
                                    </div>

                                    <div>
                                        <div>{phone_text|html}</div>
                                        <div>
                                            <a href="tel:{phone_number|html}"
                                               class="has-text-paragraph">
                                                {phone_number|html}
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {/phone_repeater}
                        </div>
                    {/phone_repeater}

                    {?email}
                        <div class="is-flex is-align-items-center mb-3">
                            <div class="contacts__icon-container">
                                {>"ui/icon" icon="email" class="icon--large is-primary" /}
                            </div>

                            <a href="mailto:{email|html}" class="has-text-paragraph">
                                {email|html}
                            </a>
                        </div>
                    {/email}

                    {?office}
                        <div class="is-flex is-align-items-center mb-3">
                            <div class="contacts__icon-container">
                                {>"ui/icon" icon="building" class="icon--large is-primary" /}
                            </div>

                            <div>
                                {office|html}
                            </div>
                        </div>
                    {/office}

                    {?domain}
                        <div class="is-flex is-align-items-center mb-3">
                            <div class="contacts__icon-container">
                                {>"ui/icon" icon="location" class="icon--large is-primary" /}
                            </div>

                            <div>
                                {domain|html}
                            </div>
                        </div>
                    {/domain}

                    {?unit}
                        <div class="is-flex is-align-items-center mb-3">
                            <div class="contacts__icon-container">
                                {>"ui/icon" icon="location" class="icon--large is-primary" /}
                            </div>

                            <div>
                                {unit|html}
                            </div>
                        </div>
                    {/unit}

                    {@isset key1=visiting_address_street key2=visiting_address_zip_code key3=visiting_address_city method="OR" }
                        <div class="is-flex is-align-items-center mb-3">
                            <div class="contacts__icon-container">
                                {>"ui/icon" icon="location" class="icon--large is-primary" /}
                            </div>

                            {visiting_address_street|html}
                            {visiting_address_zip_code|html}
                            {visiting_address_city|html}
                        </div>
                    {/isset}

                    {@isset key1=mail_address_street key2=mail_address_zip_code key3=mail_address_city method="OR" }
                        <div class="is-flex is-align-items-center mb-3">
                            <div class="contacts__icon-container">
                                {>"ui/icon" icon="location" class="icon--large is-primary" /}
                            </div>

                            {mail_address_street|html}
                            {mail_address_zip_code|html}
                            {mail_address_city|html}
                        </div>
                    {/isset}

                    {?additional_info_bottom}
                        <div>
                            {additional_info_bottom|kses}
                        </div>
                    {/additional_info_bottom}
                </div>
            </div>
        </div>
    </div>
</div>
