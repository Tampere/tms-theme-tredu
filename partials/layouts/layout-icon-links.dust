<section {?anchor}id="{anchor|s}"{/anchor}
         class="icon-links section has-text-centered">
    <div class="container pt-7 pt-12-desktop pb-7 has-background-primary-light">
        <div class="columns">
            <div class="column">
                <div class="icon-links__grid keep-vertical-spacing">
                    {#rows}
                        <div class="icon-links__item keep-vertical-spacing">
                            {?icon}
                                {>"ui/icon" class="icon--xxxlarge is-primary mb-4" /}
                            {/icon}

                            {?title}
                                <h2 class="h4 mt-0 mb-5">
                                    {title|html}
                                </h2>
                            {/title}

                            {?description}
                                <div class="icon-links__item-description mb-5">
                                    {description|kses}
                                </div>
                            {/description}

                            {>"ui/button-link" classes="is-primary" icon="arrow-right" icon_classes="icon--medium" /}
                        </div>
                    {/rows}
                </div>
            </div>
        </div>
    </div>
</section>
